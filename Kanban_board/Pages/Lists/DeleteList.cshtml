@page
@model Kanban_board.Pages.Lists.DeleteListModel

@{
    ViewData["Title"] = "Delete List";
}

<h1>Delete List</h1>

<h3>Are you sure you want to delete this list?</h3>
    <div>
        <h4>List Title: @Model.ListTitle</h4> 
    </div>


<form method="post">
    <input type="hidden" asp-for="ListId" /> 
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./Details" asp-route-id="@Model.ListId" class="btn btn-secondary">Cancel</a>
</form>