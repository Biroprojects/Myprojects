@page
@model Kanban_board.Pages.Boards.AddUserModel

@{
    ViewData["HideNavBar"] = true;
}
<h2 class="text-center">Add User to Board</h2>
<p class="text-center">Select a user from the dropdown to add them to the board.</p>

<div class="container">
    <form method="post">
        <input type="hidden" asp-for="BoardId" />

        <div class="form-group">
            <label for="SelectedUserId" class="control-label">Select User:</label>
            <select asp-for="SelectedUserId" class="form-control">
                @foreach (var user in Model.Users)
                {
                    <option value="@user.Id">@user.Email</option>
                }
            </select>
        </div>

        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary">Add User</button>
            <a asp-page="./Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>
<div>
    <a asp-page="Index">Back to Boards</a>
</div>
<style>
    body {
        background-color: #e9f5e9; /* Pasztell menta háttér */
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #343a40;
    }

    h2 {
        color: #2c5f2d;
    }

    .container {
        max-width: 500px;
        margin: 40px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-control {
        border: 1px solid #b8dfba;
        border-radius: 5px;
        padding: 10px;
    }

    .btn-primary {
        background-color: #2c5f2d;
        border: none;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
    }

    .btn-primary:hover {
        background-color: #1e3f1d;
    }

    .btn-outline-secondary {
        border: 1px solid #b8dfba;
        color: #2c5f2d;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
    }

    .btn-outline-secondary:hover {
        background-color: #b8dfba;
        color: #fff;
    }

    label {
        font-weight: bold;
    }
</style>