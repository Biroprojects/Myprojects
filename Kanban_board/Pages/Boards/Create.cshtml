@page
@model Kanban_board.Pages.Boards.CreateModel

@{
    ViewData["Title"] = "Create";
    ViewData["HideNavBar"] = true;
}

<head>
     <link rel="stylesheet" href="~/css/site.css" />
        <style >

        body {
            background-color: #e9f5e9; /* Pasztell menta háttér */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #343a40; /* Sötét szürke szöveg */
            margin: 0;
            padding: 0;
        }
        h1 {
            text-align: center;
            color: #2c5f2d;
            margin-bottom: 20px;
        }

        .container {
            max-width: 600px;
            margin: 40px auto; /* Középre helyezi a tartalmat */
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        label {
            font-weight: bold;
        }

        .form-control {
            border: 1px solid #b8dfba; /* Halvány menta szegély */
            border-radius: 5px;
            padding: 10px;
            box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
        }

            .form-control:focus {
                border-color: #85c88a; /* Élénkebb menta szín fókuszban */
                outline: none;
            }

        .btn-primary {
            background-color: #2c5f2d;
            border: none;
            color: #fff;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .btn-primary:hover {
                background-color: #1e3f1d;
            }

        a {
            color: #2c5f2d;
            text-decoration: none;
            font-weight: bold;
            margin-top: 10px;
            display: inline-block;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>


</head>
<h1>Create board</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Board.Title" class="control-label"></label>
                <input asp-for="Board.Title" class="form-control" />
                <span asp-validation-for="Board.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to Boards</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
