@page
@model Kanban_board.Pages.Boards.EditModel

@{
    ViewData["Title"] = "Edit";
    ViewData["HideNavBar"] = true;
}

<h1 class="text-center">Edit Board</h1>

<h4 class="text-center">Modify the board details below</h4>
<hr />
<div class="container">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Board.BoardId" />
        <input type="hidden" asp-for="Board.CreatedBy" />
        <input type="hidden" asp-for="Board.CreatedDate" />

        <div class="form-group">
            <label asp-for="Board.Title" class="control-label"></label>
            <input asp-for="Board.Title" class="form-control" />
            <span asp-validation-for="Board.Title" class="text-danger"></span>
        </div>
        <div class="form-group text-center">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-page="./Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>
<div>
    <a asp-page="Index">Back to Boards</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background-color: #e9f5e9; /* Pasztell menta háttér */
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #343a40;
    }

    h1, h4 {
        color: #2c5f2d;
    }

    .container {
        max-width: 600px;
        margin: 40px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    label {
        font-weight: bold;
    }

    .form-control {
        border: 1px solid #b8dfba;
        border-radius: 5px;
        padding: 10px;
    }

    .btn-primary {
        background-color: #2c5f2d;
        border: none;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
    }

    .btn-primary:hover {
        background-color: #1e3f1d;
    }

    .btn-outline-secondary {
        border: 1px solid #b8dfba;
        color: #2c5f2d;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
    }

    .btn-outline-secondary:hover {
        background-color: #b8dfba;
        color: #fff;
    }
</style>